<div class="container log-in bg-white py-5 border border-dark shadow-sm p-3 mb-5 rounded mt-5">
  <div class="login-img">
      <img class="service-img" src="https://res.cloudinary.com/dytgnd0qv/image/upload/v1656313489/plumber_jzuba7.png" alt="">
      </div>
  <h2>Rent A Tradie</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                required: false,
                placeholder: "email",
                autofocus: true,
                input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                required: false,
                placeholder: "password",
                input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class ="login-btn">
      <%= f.button :submit, "Log in", class: "btn btn-outline-primary lg-in "%>
    </div>
    <hr>
    <div class="form-actions d-flex">
    <% end %>
    <%= render "devise/shared/links" %>
  </div>

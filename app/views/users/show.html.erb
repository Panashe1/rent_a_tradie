<h1>Welcome!</h1>
<p class='text-muted'>Remember never to share your password!</p>
<div class='row mb-3'>
  <div class='col'>
    <div class="h-50 p-5 bg-light border rounded-3">
      <h2>User Information</h2>
      <p>Account ID: <%= @user.id %></p>
      <p> Registered email: <%= @user.email %></p>
    </div>
    <div class="h-50 p-5 bg-light border rounded-3 mt-3">
      <h2>Upcoming Bookings 📚</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Start date</th>
            <th scope="col">End date</th>
            <th scope="col">comments</th>
          </tr>
        </thead>
        <tbody>
          <% @bookings.each do |item| %>
            <% if item.user_id === current_user.id %>
              <tr>
                <th scope="row"><%= item.id %></th>
                <td><%= item.start_date %></td>
                <td><%= item.end_date %></td>
                <td><%= item.comments %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class='col'>
    <div class="h-100 p-5 bg-light border rounded-3">
      <h2>Services ⚙️</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Cost</th>
          </tr>
        </thead>
        <tbody>
          <% @services.each do |item| %>
            <% if @user.id === item.user_id  %>
              <tr>
                <th scope="row"><%= item.id %></th>
                <td><%= item.title %></td>
                <td><%= item.description %></td>
                <td><%= item.cost %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class='row'>
  <div class='col-12'>
    <div class="h-100 p-5 bg-light border rounded-3 m-5">
      <h2>Need help?</h2>
      <p>Contact us</p>
      <p>📧 help@rent-a-trade.com</p>
      <p>📞 0457072222</p>
      <p class='text-muted'>Please remember to be kind when dealing with our support staff</p>
    </div>
  </div>
</div>

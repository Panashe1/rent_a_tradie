<div class="container mt-5">
  <div class="show-container row bg-show">
    <%= render "shared/heading" %>
    <div class="col">
      <%= render "shared/pill_sm" %>
    </div>
    <div class='col-12 align-self-end'>
      <img src='https://res.cloudinary.com/dh8a307rs/image/upload/v1655791793/happy_cgmorw.png' class='happy-show-image'>
      <div class="card">
        <div class="card-header">
          Reviews
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p>A well-known, reliable local for all your around the house jobs.</p>
            <footer class="blockquote-footer">Local Tradie <cite title="Source Title"><%= @service.title %></cite></footer>
          </blockquote>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class='row'>
    <div class='col-8 border-secondary border-end border-5 m-3 bg-white text-dark'>
      <h2 class='mt-2'><i class="fas fa-tools"></i><%= @service.title %></h2>
      <p class='text-wrap' style="width: 30rem;">Come take a look! at John now!, he has a number of services available from general handyman to full bathroom makeovers! </p>
      <p class='text-wrap' style="width: 30rem;">Average cost: $<%= @service.cost %> </p>
      <div class="col align-self-end">
        <img src='https://res.cloudinary.com/dh8a307rs/image/upload/v1656045382/IMG_3375_gylxro.webp' class='show-work-image' data-bs-toggle="modal" data-bs-target="#exampleModal">
        <img src='https://res.cloudinary.com/dh8a307rs/image/upload/v1656045441/service-today-plumber_eyflya.webp' class='show-work-image' data-bs-toggle="modal" data-bs-target="#exampleModal">
        <img src='https://res.cloudinary.com/dh8a307rs/image/upload/v1656046321/marian-florinel-condruz-C-oYJoIfgCs-unsplash_idh8df.jpg' class='show-work-image' data-bs-toggle="modal" data-bs-target="#exampleModal">
        <img src='https://res.cloudinary.com/dh8a307rs/image/upload/v1656046440/shirish-suwal-ctmuaOO-JJI-unsplash_kfqsha.jpg' class='show-work-image'>
        <div class='row mt-1'>
          <div class='col'>
            <img src='https://res.cloudinary.com/dh8a307rs/image/upload/v1656046393/remi-muller-LlHgaeBwYVE-unsplash_zij6ys.jpg' class='show-work-image'>
            <img src='https://picsum.photos/id/211/70/70' class='show-work-image'>
            <img src='https://picsum.photos/id/214/70/70' class='show-work-image'>
            <img src='https://picsum.photos/id/217/70/70' class='show-work-image'>
          </div>
        </div>
      </div>
    </div>
    <div class='col mt-2 border py-3 bg-white text-dark'>
      <%= simple_form_for [@service, @booking], method: :post do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.input :comments %>
        <%= f.submit "Book Now", class: "btn btn-dark" %>
      <%end %>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Works</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="https://res.cloudinary.com/dh8a307rs/image/upload/v1656045382/IMG_3375_gylxro.webp" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://res.cloudinary.com/dh8a307rs/image/upload/v1656045441/service-today-plumber_eyflya.webp" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://res.cloudinary.com/dh8a307rs/image/upload/v1656046440/shirish-suwal-ctmuaOO-JJI-unsplash_kfqsha.jpg" class="d-block w-100" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
